<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-signin'}) do |f| %>
  <h2 class='form-signin-header'>Sign up</h2>

  <%= devise_error_messages! %>

  <%= f.text_field :first_name, :placeholder => 'First name' %>
  <%= f.text_field :last_name, :placeholder => 'Last name' %>

  <%= f.text_field :login, :placeholder => 'Login' %>

  <%= f.email_field :email, :placeholder => 'Email' %>

  <%= f.password_field :password, :placeholder => 'Password' %>

  <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation' %>

  <%= f.submit "Sign up", :class => 'btn btn-large btn-primary' %>
<% end %>

<%= render "devise/shared/links" %>
