<h1>Listing channels</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Url</th>
      <th>Title</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @channels.each do |channel| %>
    <tr>
      <td><%= channel.url %></td>
      <td><%= channel.title %></td>
      <td><%= channel.user_id %></td>
      <td><%= link_to 'Show', channel %></td>
      <td><%= link_to 'Edit', edit_channel_path(channel) %></td>
      <td><%= link_to 'Destroy', channel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Channel', new_channel_path, :class => 'btn btn-primary' %>
