.article {
  position: relative;
  margin: 15px 0;
  padding: 0px 19px 0px;
  background-color: white;
  border: 1px solid #DDD;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
}

span.star {
  background: url(<%= asset_path "3904077461-entry-action-icons.png" %>);
  padding-top: 1px;
  padding-right: 0px;
  padding-bottom:  1px;
  padding-left:  16px;
}

span.star-off {
  background-position: -102px -1px;
}

span.star-on {
  background-position: -64px -33px;
}
